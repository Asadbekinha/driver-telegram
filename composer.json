{
    "name": "botman/driver-telegram",
    "license": "MIT",
    "description": "Telegram driver for BotMan",
    "keywords": [
        "Bot",
        "BotMan",
        "Telegram"
    ],
    "homepage": "http://github.com/botman/driver-telegram",
    "authors": [
        {
            "name": "Marcel Pociot",
            "email": "m.pociot@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.0",
        "symfony/http-foundation": "2.8.*|3.0.*|3.1.*|3.2.*|3.3.*",
        "tightenco/collect": "~5.0",
        "mpociot/botman": "~2.0",
        "thecodingmachine/discovery": "^1.2"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.0",
        "mockery/mockery": "dev-master",
        "ext-curl": "*"
    },
    "autoload": {
        "psr-4": {
            "BotMan\\Drivers\\Telegram\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "cs": "php-cs-fixer fix"
    }
}
